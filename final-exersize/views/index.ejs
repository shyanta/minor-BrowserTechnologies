<%- include('./partials/head.ejs') %>
<form class="" action="/" method="post">
	<label for="nerdy">Type your Nerdy text here</label>
	<textarea name="nerdy" type="text" rows="5" autofocus>Some Nerdy Text</textarea>
	<label for="color">Tshirt Color:</label>
	<select name="color" id="color">
		<option value="black">Pick a Color</option>
		<option value="black">Black</option>
		<option value="grey">Grey</option>
		<option value="white">White</option>
		<option value="green">Green</option>
		<option value="red">Red</option>
		<option value="blue">Blue</option>
	</select>
	<label for="text">Text Color:</label>
	<select name="text" id="text">
		<option value="black">Pick a Color</option>
		<option value="red">Red</option>
		<option value="blue">Blue</option>
		<option value="hotpink">Pink</option>
		<option value="white">White</option>
		<option value="pink">Black</option>
	</select>
	<label for="font">Text Font:</label>
	<select name="font" id="font">
		<option value="sans-serif">Pick a Font</option>
		<option style="font-family: verdana;" value="Verdana">Verdana</option>
		<option style="font-family: Comic Sans MS;" value="Comic Sans MS">Comic Sans MS</option>
		<option style="font-family: Impact;" value="Impact">Impact</option>
		<option style="font-family: Lucida Console;" value="Lucida Console">Lucida Console</option>
		<option style="font-family: Arial Black;" value="Arial Black">Arial Black</option>
	</select>
	<label for="number">Font Size:</label>
	<input id="number" type="number" min="20" name="size" value="20">
	<input type="submit" value="send"/>
</form>
<section>
	<p>Your Nerdy text will be placed here</p>
	<img src="img/shirt-red.jpg" alt="red" title="red"/>
	<button class="button-first">Save as first Shirt</button>
	<button class="button-second">Save as second Shirt</button>
	<button class="button-third">Save as third Shirt</button>
</section>
<section class="saved-items">
	<h2>Saved Items</h2>
	<p></p>
	<ul class="saved-shirts">
		<li class="shirtOne"></li>
		<li class="shirtTwo"></li>
		<li class="shirtThree"></li>
	</ul>
</section>

